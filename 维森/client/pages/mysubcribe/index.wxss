/* pages/mysubcribe/index.wxss */
page {
  width: 100%;
  background-color: whitesmoke;
}
.all {
  height: 100%;
  width: 100%;
}

.searchResult {
  background-color: white;
  margin: 10rpx 10rpx 15rpx 10rpx;
  border-bottom-color: #d7d6dc;
  border-bottom-style: groove;
  /* border-left-style: groove;
  border-top-style: groove; */
  border-right-style: groove;
  padding-left: 20rpx;
  padding-top: 20rpx;
  padding-right: 20rpx;
}

.resultview {
  margin-top: 10rpx;
}

.eventName {
  font-weight: bold;
  padding-bottom: 15rpx;
  border-bottom-style: dashed;
  border-bottom-width: 3rpx;
  border-bottom-color: gray;
}

.eventcategory {
  font-size: small;
  margin-bottom: 7rpx;
  margin-top: 7rpx;
}

.eventCountry {
  font-size: small;
  margin-bottom: 7rpx;
}

.eventDate {
  margin-bottom: 30rpx;
  font-size: small;
}

.bold {
  font-weight: bold;
}

.fail {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  top: 20%;
}

.sorry {
  font-size: larger;
  color: darkgray;
}

.main_container {
  position: relative;
  width: 750rpx;
  height: 100%;
  background: #fd9494;
}

.container {
  position: absolute; /*使用absolute的原因是因为为了防止第一个子视图有margin-top时，造成顶部留白的情况*/
  left: 0;
  top: 0;
  width: 100%;
  padding-bottom: 20rpx;
}

.translate {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
}

.translate text {
  padding-top: 20rpx;
  padding-left: 450rpx;
}

.body-view {
  padding-top: 10rpx;
  padding-left: 10rpx;
}
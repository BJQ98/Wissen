/**index.wxss**/

page {
        height: 100%;
        width: 100%;
}

.container {
        height: 100%;
        width: 100%;
}

.container image {
        position: absolute;
        width: 100%;
        height: 100%;
}

.container .Font {
        position: absolute;
        font-size: 200%;
        font-style: italic;
        color: white;
        left: 50%;
        top: 15%;
        transform: translate(-50%, -50%);
}

.weui-search-bar__form .weui-search-bar__box icon {
        position: absolute;
        right: 3%;
        top: 50%;
}

.weui-search-bar__form {
        position: absolute;
        border-radius: 40rpx;
        background: #fff;
        border: 1rpx solid #e6e6ea;
        opacity: 0.5;
        width: 90%;
        height: 10%;
        top: 30%;
}

.weui-search-bar__box {
        position: absolute;
        display: flex;
        padding-left: 30rpx;
        padding-right: 30rpx;
        width: 100%;
        box-sizing: border-box;
        z-index: 1;
        background: black;
        top: 20%;
}

.weui-search-bar__form .weui-search-bar__box text {
        position: absolute;
        font-size: 130%;
        top: 10%;
        left: 20%;
}
